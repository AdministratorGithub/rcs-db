#!/usr/bin/env ruby

# ensure the working dir is correct
Dir.chdir File.dirname(File.dirname(File.realpath(__FILE__)))

# select the correct dir based upon the platform we are running on
case RUBY_PLATFORM
  when /darwin/
    os = 'macos'
    ext = ''
  when /mingw/
    os = 'win'
    ext = '.exe'
end

datadir = Dir.pwd + '/data'
configdir = datadir + '/config'
logdir = Dir.pwd + '/log'

# ensure the data directory is present
Dir::mkdir(datadir) if not File.directory?(datadir)
Dir::mkdir(configdir) if not File.directory?(configdir)

# the mongod executable
mongod = Dir.pwd + '/mongodb/' + os + '/mongod' + ext
mongos = Dir.pwd + '/mongodb/' + os + '/mongos' + ext

puts "Starting the config server..."
# the config server
parameters = "--dbpath #{configdir} --fork --logpath #{logdir}/mongoc.log --configsvr --rest --bind_ip localhost"
`#{mongod} #{parameters}`

sleep 1

puts "Starting the router..."
# the shard router
parameters = "--logpath #{logdir}/mongos.log --fork --configdb localhost --bind_ip localhost"
`#{mongos} #{parameters}`

sleep 1

puts "Starting the shard server..."
# the shard server
parameters = "--dbpath #{datadir} --journal --fork --logpath #{logdir}/mongod.log --shardsvr --rest --bind_ip localhost"
`#{mongod} #{parameters}`
